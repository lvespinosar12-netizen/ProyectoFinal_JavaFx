<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.poli.Proyecto_Space_Suit_Manager.PrimaryController">
   <children>
      <Label text="Primary View" textFill="#059405">
         <font>
            <Font name="Book Antiqua" size="18.0" />
         </font></Label>
      <Button fx:id="primaryButton" onAction="#switchToSecondary" text="Switch to Secondary View" textFill="#aa0fb5">
         <font>
            <Font name="Bodoni MT" size="21.0" />
         </font></Button>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
